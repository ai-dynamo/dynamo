# Environment variables for dynamo-voice-agents
# Copy this file to .env and customize as needed

# GPU Configuration
# -----------------
# Which GPU(s) to make visible to the container (for docker compose)
NVIDIA_VISIBLE_DEVICES=0

# CUDA device index within the container (usually 0 when passing single GPU)
ASR_CUDA_DEVICE=0

# ASR Model Configuration
# -----------------------
# Model to use for speech recognition
ASR_MODEL_NAME=nvidia/parakeet-rnnt-1.1b

# Logging
# -------
# Log level: DEBUG, INFO, WARNING, ERROR
WORKER_LOG_LEVEL=INFO
DYN_LOG=INFO

# Dynamo Runtime Configuration
# ----------------------------
# KV store backend: file (local) or etcd (distributed)
DYN_STORE_KV=file

# Request plane: tcp (local) or nats (distributed)
DYN_REQUEST_PLANE=tcp

# OpenTelemetry Tracing (Optional)
# --------------------------------
# Enable trace export
OTEL_EXPORT_ENABLED=false

# OTLP endpoint (use jaeger service name if using docker compose with --profile tracing)
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://jaeger:4317

# Service name in traces
OTEL_SERVICE_NAME=streaming-asr

# Data Directories
# ----------------
# Directory containing audio files for testing (mounted as /app/data in container)
AUDIO_DATA_DIR=./data
